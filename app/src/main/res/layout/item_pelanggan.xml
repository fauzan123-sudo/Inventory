<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <TableLayout
        android:background="#22ff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">
        <TableRow
            android:layout_margin="5dp"
            >
            <TextView
                android:layout_column="1"
                android:text="Nama Pelanggan"
                android:padding="3dip" />
            <TextView
                android:padding="3dip"
                android:id="@+id/nama_pelanggan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nama_pelanggan"
                android:maxLines="1"
                />
        </TableRow>

        <TableRow
        android:layout_margin="5dp">
        <TextView
            android:layout_column="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            android:padding="3dip" />
        <TextView
            android:id="@+id/nama_barang"
            android:padding="3dip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nama Barang"
            />
    </TableRow>

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                android:padding="3dip" />
            <TextView
                android:id="@+id/tanggal"
                android:padding="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanggal"
                />
        </TableRow>

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Telpon"
                android:padding="3dip" />
            <TextView
                android:id="@+id/no_tlp"
                android:padding="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No tlp"
                />
        </TableRow>

        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                android:padding="3dip" />
            <TextView
                android:id="@+id/harga"
                android:padding="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Harga"
                />
        </TableRow>
        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Barang"
                android:padding="3dip" />
            <TextView
                android:id="@+id/jenis_barang"
                android:padding="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jenis Barang"
                />
        </TableRow>
        <TableRow
            android:layout_margin="5dp">
            <TextView
                android:layout_column="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Barang"
                android:padding="3dip" />
            <TextView
                android:id="@+id/jumlah_brg"
                android:padding="3dip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jumlah Barang"
                />
        </TableRow>
    </TableLayout>

        <ImageView
            android:id="@+id/hapus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_delete"
            android:layout_gravity="center"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>